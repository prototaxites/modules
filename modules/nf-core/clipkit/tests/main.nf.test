nextflow_process {

    name "Test Process CLIPKIT"
    script "../main.nf"
    process "CLIPKIT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "clipkit"
    tag "gunzip"

    setup {
        run("GUNZIP") {
            script "../../gunzip/main.nf"
            process {
                """
                input[0] = [
                    [ id:'PF14720' ], // meta map
                    file(params.modules_testdata_base_path + 'delete_me/hmmer/PF14720_seed.alnfaa.gz', checkIfExists: true)
                ]
                """
            }
        }
    }

    test("PF14720 - aln") {
        when {
            params {
                module_args = ""
            }
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = []
                input[2] = []
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out.clipkit,
                    process.out.log,
                    path(process.out.metadata[0][1]).readLines().size(),
                    process.out.findAll { key, val -> key.startsWith("versions")}
                ).match() }
            )
        }
    }

    test("PF14720 - aln - gap threshold - ends only") {
        when {
            params {
                module_args = "--mode gappy --gaps 0.1 --ends_only"
            }
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = "alnfaa"
                input[2] = []
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out.clipkit,
                    process.out.log,
                    path(process.out.metadata[0][1]).readLines().size(),
                    process.out.findAll { key, val -> key.startsWith("versions")}
                ).match() }
            )
        }
    }

    test("PF14720 - aln - complementary - json") {
        when {
            params {
                module_args = "--complementary --report_json"
            }
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = []
                input[2] = []
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out.clipkit,
                    process.out.log,
                    path(process.out.metadata[0][1]).readLines().size(),
                    process.out.complementary,
                    path(process.out.json[0][1]).readLines().size(),
                    process.out.findAll { key, val -> key.startsWith("versions")}
                ).match() }
            )
        }
    }

    test("PF14720 - aln - auxiliary file (CST)") {
        when {
            params {
                module_args = "--mode cst"
            }
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = []
                input[2] = Channel.of(
                    "1\tkeep", "2\ttrim", "3\tkeep", "4\ttrim", "5\tkeep"
                ).collectFile(name: 'cst_auxiliary.tsv', newLine: true)
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(
                    process.out.clipkit,
                    process.out.log,
                    path(process.out.metadata[0][1]).readLines().size(),
                    process.out.findAll { key, val -> key.startsWith("versions")}
                ).match() }
            )
        }
    }

    test("PF14720 - aln - stub") {
        options "-stub"

        when {
            params {
                module_args = "--complementary --report_json"
            }
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = ""
                input[2] = []
                """
            }
        }

        then {
            assert process.success
            assertAll(
                { assert snapshot(sanitizeOutput(process.out)).match() }
            )
        }
    }
}
